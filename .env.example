# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
PGDATABASE=safety_companion_db
PGHOST=localhost
PGPASSWORD=your_secure_password
PGPORT=5432
PGUSER=safety_user

# Session Security
SESSION_SECRET=generate-a-secure-random-string-here
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-key

# External APIs
VITE_GEMINI_API_KEY=your-gemini-api-key
VITE_GOOGLE_API_KEY=your-google-maps-api-key

# Safety Companion API
VITE_SAFETY_COMPANION_API_URL=https://safety-companion.up.railway.app

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn
REDIS_URL=redis://localhost:6379